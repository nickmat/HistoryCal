// function009.hcs - Test function in a expression with arguments.

function test.dob(age, on, sch) {
    if sch <> ""
        set input (sch);
    endif
    result = date {(sch), on[year] - age - 1, on[month], on[day]} + 1
        ~ date {(sch), on[year] - age, on[month], on[day]};
}

set inout g:dmy;

writeln "";
writeln string @test.dob(68, date "18sep2017", "g");
writeln string @test.dob(69, date "19sep2017", "g");

