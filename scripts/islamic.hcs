vocab "im" {
    name "Month names";
    fieldname "month";
    lang "en";
    stylename "Month";
    tokens {
        1, "Muharram";
        2, "Safar";
        3, "Rabi' I";
        4, "Rabi' II";
        5, "Jumada I";
        6, "Jumada II";
        7, "Rajab";
        8, "Sha'aban";
        9, "Ramadan";
        10, "Shawwal";
        11, "Dhu al Qi'dah";
        12, "Dhu al Hijjah";
    }
}

vocab "iw" {
    name "Weekday names";
    fieldname "wsday"; // Note: Days are numbered from Sunday, unlike "wday".
    lang "en";
    stylename "Weekday", "WDay";
    tokens {
        1, "Yaum al Ahad",         "Ahad"; // Sunday
        2, "Yaum al Ithnayn",      "Ithn"; // Monday
        3, "Yaum ath Thalaathaa'", "Thal"; // Tuesday
        4, "Yaum al Arba'aa'",     "Arba"; // Wednesday
        5, "Yaum al Khamis",       "Kham"; // Thursday
        6, "Yaum al Jumu'ah",      "Jumu"; // Friday
        7, "Yaum as Sabt",         "Sabt"; // Saturday
    }
}

grammar "i" {
    vocabs "im", "iw";
    alias field {
        "WDay",  "wsday";
        "Day",   "day";
        "Month", "month";
        "Year",  "year";
    }
    alias stylename {
        "WDay",  "w";
        "Day",   "dd";
        "Month", "mm";
        "Year",  "yyyy";
    }
    alias unit {
        "d", "day";
        "m", "month";
        "y", "year";
        "w", "week";
    }
    format "dmy",    "|(Day) |(Month:im) |(Year)";
    format "dmy.a",  "|(Day) |(Month:im.a) |(Year)";
    format "dmy.d",  "|(Day) |(Month) |(Year)";
    format "wdmy",   "|(WDay:iw) |(Day) |(Month:im) |(Year)";
    format "wdmy.a", "|(WDay:iw.a) |(Day) |(Month:im.a) |(Year)";
    format "ymd",    "|(Year)|,(Month:im.a)|,(Day)";
    pref "dmy";
}

scheme "i" {
    name "Islamic Tabular";
    base islamic IIc;
    grammar "i";
}

scheme "ims" {
    name "Islamic Microsoft Hijri";
    base islamic IIa;
    grammar "i";
}

scheme "if" {
    name "Islamic FƒÅtimid";
    base islamic IIIa;
    grammar "i";
}

